{
  "manifest_version": 3,
  "name": "ChatGrabber (Decoy Chat Grabber Addon)",
  "version": "0.1.6",
  "description": "Save the current page as a single self-contained offline HTML file (all assets inlined).",
  "action": {
    "default_title": "Save page as single HTML",
    "default_icon": {
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "activeTab",
    "downloads",
    "pageCapture",
    "contextMenus",
    "scripting",
    "declarativeNetRequest",
    "storage",
    "offscreen"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ]
}

